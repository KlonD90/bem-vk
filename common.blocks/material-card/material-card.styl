.material-card
    width 360px
    padding 5px
    border 1px solid #ccc
    margin 5px
    position relative
    overflow hidden
.material-card__close
    position absolute
    right 5px
    top 5px
.material-card
    &__image
        float left
        margin-right 5px
    &__info
        margin-right 35px
    &__title
        font-weight 700
